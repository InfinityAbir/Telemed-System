@{
    ViewData["Title"] = "Forgot Password";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: #f4f6f9;
        font-family: 'Inter', sans-serif;
    }

    .auth-page {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .auth-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 420px;
        padding: 40px 30px;
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .auth-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 36px rgba(0,0,0,0.15);
        }

        .auth-card .logo {
            font-size: 2.2rem;
            font-weight: 700;
            color: #007bff;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 8px;
            margin-bottom: 20px;
        }

        .auth-card p.subtitle {
            color: #6c757d;
            font-size: 1rem;
            margin-bottom: 25px;
        }

    .form-floating > input {
        border-radius: 10px;
        padding: 20px 15px 10px 15px;
    }

    .btn-reset {
        background-color: #007bff;
        color: #fff;
        font-weight: 600;
        border-radius: 10px;
        padding: 12px 0;
        width: 100%;
        transition: all 0.3s ease;
    }

        .btn-reset:hover {
            background-color: #0056b3;
            transform: scale(1.02);
        }

    .login-links {
        margin-top: 20px;
        font-size: 0.95rem;
    }

        .login-links a {
            color: #007bff;
            text-decoration: none;
        }

            .login-links a:hover {
                text-decoration: underline;
            }

    .alert {
        border-radius: 12px;
        font-size: 0.95rem;
    }
</style>

<div class="auth-page">
    <div class="auth-card">
        <div class="logo">
            <i class="fas fa-heartbeat text-danger"></i> TeleMed
        </div>
        <p class="subtitle">Enter your email to reset your password</p>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">@TempData["Message"]</div>
        }

        <form asp-action="ForgotPassword" method="post">
            @Html.AntiForgeryToken()

            <div class="form-floating mb-3">
                <input type="email" name="email" id="Email" class="form-control" placeholder="Enter your email" required />
                <label for="Email">Email</label>
            </div>

            <button type="submit" class="btn btn-reset">Send Reset Link</button>

            <div class="login-links mt-3">
                <p>Remembered your password? <a asp-action="Login">Login here</a></p>
            </div>
        </form>
    </div>
</div>

<script src="https://kit.fontawesome.com/a2a4f5b6c5.js" crossorigin="anonymous"></script>
