@model Telemed.Models.ApplicationUser
@{
    ViewData["Title"] = "My Profile - TeleMed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: #F9FAFB;
        font-family: 'Inter', 'Segoe UI', system-ui, -apple-system, sans-serif;
    }

    /* Header Section */
    .profile-header-section {
        background: linear-gradient(135deg, #0066FF 0%, #00D4AA 100%);
        padding: 60px 20px 80px;
        position: relative;
        overflow: hidden;
    }

        .profile-header-section::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 500px;
            height: 500px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1), transparent);
            border-radius: 50%;
        }

    .header-content {
        max-width: 1200px;
        margin: 0 auto;
        position: relative;
        z-index: 2;
        text-align: center;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: white;
        margin: 0;
        letter-spacing: -0.5px;
    }

    /* Profile Wrapper */
    .profile-wrapper {
        max-width: 1200px;
        margin: -40px auto 80px;
        padding: 0 20px;
        position: relative;
        z-index: 3;
    }

    .profile-layout {
        display: grid;
        grid-template-columns: 350px 1fr;
        gap: 24px;
    }

    /* Profile Card - Left Sidebar */
    .profile-sidebar {
        background: white;
        border-radius: 24px;
        padding: 32px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        border: 2px solid #f0f0f0;
        text-align: center;
        height: fit-content;
        position: sticky;
        top: 100px;
    }

    .profile-avatar-wrapper {
        width: 140px;
        height: 140px;
        margin: 0 auto 24px;
        border-radius: 50%;
        overflow: hidden;
        border: 5px solid #F9FAFB;
        box-shadow: 0 8px 30px rgba(0, 102, 255, 0.2);
        position: relative;
    }

    .profile-avatar {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .profile-avatar-wrapper::after {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 50%;
        border: 3px solid transparent;
        background: linear-gradient(135deg, #0066FF, #00D4AA) border-box;
        -webkit-mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
    }

    .profile-name {
        font-size: 1.75rem;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 8px;
    }

    .profile-email {
        font-size: 0.95rem;
        color: #666;
        margin-bottom: 24px;
    }

    .profile-stats {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 24px;
        padding: 20px;
        background: #F9FAFB;
        border-radius: 16px;
    }

    .stat-item {
        text-align: center;
    }

    .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: #0066FF;
        display: block;
    }

    .stat-label {
        font-size: 0.8rem;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .action-buttons {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .btn-action {
        border-radius: 12px;
        padding: 12px 20px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 0.95rem;
        text-align: center;
        width: 100%;
    }

        .btn-action.btn-primary {
            background: linear-gradient(135deg, #0066FF, #00D4AA);
            color: white;
        }

            .btn-action.btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(0, 102, 255, 0.3);
            }

        .btn-action.btn-outline-secondary {
            background: white;
            color: #666;
            border: 2px solid #e0e0e0;
        }

            .btn-action.btn-outline-secondary:hover {
                background: #F9FAFB;
                border-color: #0066FF;
                color: #0066FF;
                transform: translateY(-2px);
            }

    /* Main Content Area */
    .profile-main-content {
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    .info-card {
        background: white;
        border-radius: 24px;
        padding: 32px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        border: 2px solid #f0f0f0;
        transition: all 0.3s ease;
    }

        .info-card:hover {
            border-color: #0066FF;
            box-shadow: 0 8px 30px rgba(0, 102, 255, 0.12);
        }

    .card-header-title {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 24px;
    }

    .card-icon {
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, #E8F4FF, #E0F9F4);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .card-icon i {
            font-size: 1.5rem;
            background: linear-gradient(135deg, #0066FF, #00D4AA);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

    .card-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1a1a1a;
        margin: 0;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .info-item {
        padding: 16px;
        background: #F9FAFB;
        border-radius: 12px;
        border: 1px solid #f0f0f0;
    }

    .info-label {
        font-size: 0.85rem;
        color: #666;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 6px;
    }

    .info-value {
        font-size: 1.05rem;
        color: #1a1a1a;
        font-weight: 500;
    }

    .badge {
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

        .badge.bg-success {
            background-color: #E8F9F0 !important;
            color: #00A651 !important;
        }

        .badge.bg-warning {
            background-color: #FFF4E5 !important;
            color: #FF9800 !important;
        }

    .divider {
        height: 1px;
        background: linear-gradient(90deg, transparent, #e0e0e0, transparent);
        margin: 24px 0;
    }

    /* Modal Styling */
    .modal-content {
        border-radius: 24px;
        border: none;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
    }

    .modal-header {
        background: linear-gradient(135deg, #0066FF, #00D4AA);
        color: white;
        border-radius: 24px 24px 0 0;
        padding: 24px 32px;
        border: none;
    }

    .modal-title {
        font-weight: 700;
        font-size: 1.5rem;
    }

    .btn-close {
        filter: brightness(0) invert(1);
        opacity: 0.8;
    }

    .modal-body {
        padding: 32px;
    }

    .modal-footer {
        padding: 20px 32px;
        border-top: 1px solid #f0f0f0;
        border-radius: 0 0 24px 24px;
    }

    .form-label {
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        font-size: 0.95rem;
    }

    .form-control {
        border-radius: 12px;
        border: 2px solid #e0e0e0;
        padding: 12px 16px;
        transition: all 0.3s ease;
        font-size: 0.95rem;
    }

        .form-control:focus {
            border-color: #0066FF;
            box-shadow: 0 0 0 4px rgba(0, 102, 255, 0.1);
            outline: none;
        }

    /* Responsive Design */
    @@media (max-width: 992px) {
        .profile-layout

    {
        grid-template-columns: 1fr;
    }

    .profile-sidebar {
        position: relative;
        top: 0;
    }

    }

    @@media (max-width: 768px) {
        .page-title

    {
        font-size: 2rem;
    }

    .info-grid {
        grid-template-columns: 1fr;
    }

    .profile-header-section {
        padding: 40px 20px 60px;
    }

    .profile-wrapper {
        margin-top: -30px;
    }

    }
</style>

<!-- Header Section -->
<section class="profile-header-section">
    <div class="header-content">
        <h1 class="page-title">My Profile</h1>
    </div>
</section>

<!-- Profile Content -->
<div class="profile-wrapper">
    <div class="profile-layout">

        <!-- Left Sidebar -->
        <aside class="profile-sidebar">
            <div class="profile-avatar-wrapper">
                <img src="@(string.IsNullOrEmpty(Model.ProfileImageUrl) ? "/images/default-user.png" : Model.ProfileImageUrl)"
                     class="profile-avatar" alt="Profile Picture" />
            </div>

            <h3 class="profile-name">@Model.FullName</h3>
            <p class="profile-email">@Model.Email</p>

            @if (User.IsInRole("Doctor"))
            {
                <div class="profile-stats">
                    <div class="stat-item">
                        <span class="stat-value">@ViewBag.ConsultationFee</span>
                        <span class="stat-label">BDT/Visit</span>
                    </div>
                </div>
            }

            <div class="action-buttons">
                <button class="btn btn-primary btn-action" data-bs-toggle="modal" data-bs-target="#editProfileModal">
                    <i class="bi bi-pencil-square"></i> Edit Profile
                </button>
                <button class="btn btn-outline-secondary btn-action" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                    <i class="bi bi-key"></i> Change Password
                </button>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="profile-main-content">

            <!-- Personal Information Card -->
            <div class="info-card">
                <div class="card-header-title">
                    <div class="card-icon">
                        <i class="bi bi-person-circle"></i>
                    </div>
                    <h4 class="card-title">Personal Information</h4>
                </div>

                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">Full Name</div>
                        <div class="info-value">@Model.FullName</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Email Address</div>
                        <div class="info-value">@Model.Email</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Phone Number</div>
                        <div class="info-value">@(Model.PhoneNumber ?? "Not provided")</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">
                            @(User.IsInRole("Doctor") ? "Short Bio" : "Address")
                        </div>
                        <div class="info-value">
                            @(Model.Address ?? "Not provided")
                        </div>
                    </div>

                </div>
            </div>

            <!-- Doctor Information Card -->
            @if (User.IsInRole("Doctor"))
            {
                <div class="info-card">
                    <div class="card-header-title">
                        <div class="card-icon">
                            <i class="bi bi-award"></i>
                        </div>
                        <h4 class="card-title">Professional Information</h4>
                    </div>

                    <div class="info-grid">
                        <div class="info-item">
                            <div class="info-label">Specialization</div>
                            <div class="info-value">@ViewBag.Specialization</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Qualification</div>
                            <div class="info-value">@ViewBag.Qualification</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">BM&DC Number</div>
                            <div class="info-value">@ViewBag.BMDCNumber</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Consultation Fee</div>
                            <div class="info-value">BDT @ViewBag.ConsultationFee</div>
                        </div>
                    </div>

                    <div class="divider"></div>

                    <div class="info-item">
                        <div class="info-label">Account Status</div>
                        <div class="info-value">
                            @if (ViewBag.IsApproved == true)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Verified
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning">
                                    <i class="bi bi-clock"></i> Pending Approval
                                </span>
                            }
                        </div>
                    </div>
                </div>
            }

        </main>
    </div>
</div>

<!-- Change Password Modal -->
<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            <form asp-action="ChangePassword" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Change Password</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Current Password</label>
                        <input type="password" name="CurrentPassword" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">New Password</label>
                        <input type="password" name="NewPassword" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Confirm New Password</label>
                        <input type="password" name="ConfirmPassword" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary btn-action" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary btn-action">Change Password</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Edit Profile Modal -->
<div class="modal fade" id="editProfileModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <form asp-action="Profile" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="FullName" class="form-label">Full Name</label>
                                <input asp-for="FullName" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="PhoneNumber" class="form-label">Phone</label>
                                <input asp-for="PhoneNumber" class="form-control" />
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">
                                @(User.IsInRole("Doctor") ? "Bio" : "Address")
                            </div>
                            <div class="info-value">
                                @(Model.Address ?? "Not provided")
                            </div>
                        </div>

                        @if (User.IsInRole("Doctor"))
                        {
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">BM&DC Registration Number</label>
                                    <input type="text" name="BMDCNumber" class="form-control"
                                           value="@(ViewBag.BMDCNumber ?? "")" placeholder="Enter your BM&DC number" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Consultation Fee (BDT)</label>
                                    <input type="number" name="ConsultationFee" class="form-control" step="0.01" min="0"
                                           value="@(ViewBag.ConsultationFee ?? 0)" required />
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary btn-action" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary btn-action">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
}