@inject UserManager<Telemed.Models.ApplicationUser> UserManager
@using Microsoft.AspNetCore.Identity
@using Telemed.Models
@{
    ViewData["Title"] ??= "TeleMed";

    string userFullName = "";
    bool isAdmin = false;
    bool isDoctor = false;
    bool isPatient = false;

    if (User.Identity.IsAuthenticated)
    {
        var currentUser = await UserManager.GetUserAsync(User);
        if (currentUser != null)
        {
            userFullName = currentUser.FullName;
            isAdmin = await UserManager.IsInRoleAsync(currentUser, "Admin");
            isDoctor = await UserManager.IsInRoleAsync(currentUser, "Doctor");
            isPatient = await UserManager.IsInRoleAsync(currentUser, "Patient");
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TeleMed</title>

    <!-- Bootstrap & Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            transition: margin-left 0.3s ease;
        }

        main {
            padding: 20px;
            transition: margin-left 0.3s ease;
        }

        /* Sidebar Styles */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 250px;
            padding-top: 60px;
            color: #fff;
            background: linear-gradient(45deg, #007bff, #00b4ff, #0056b3, #007bff);
            background-size: 400% 400%;
            animation: gradientBG 15s ease infinite;
            z-index: 1000;
            box-shadow: 4px 0 20px rgba(0,0,0,0.1);
            transition: transform 0.4s ease, opacity 0.4s ease;
        }

        @@keyframes gradientBG {
            0%

        {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }

        }

        /* Hide + fade effect */
        .sidebar.hide {
            transform: translateX(-100%);
            opacity: 0;
        }

        .sidebar a {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 12px 25px;
            color: #fff;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.3s;
        }

            .sidebar a:hover {
                background: rgba(255,255,255,0.2);
                border-radius: 10px;
                transform: translateX(5px);
            }

        .sidebar .sidebar-header {
            font-size: 1.6rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 30px;
        }

        /* Toggle Button */
        .toggle-btn {
            position: fixed;
            top: 20px;
            left: 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 50%;
            padding: 10px;
            font-size: 18px;
            cursor: pointer;
            z-index: 1200;
            display: none;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            transition: transform 0.3s;
        }

            .toggle-btn:hover {
                transform: scale(1.1);
            }

        .content-shift {
            margin-left: 250px;
        }

        footer {
            background: #212529;
            color: #f8f9fa;
        }

        @@media (max-width: 768px) {
            .sidebar

        {
            width: 200px;
            padding-top: 50px;
        }

        main, .content-shift {
            margin-left: 0;
        }

        .toggle-btn {
            display: block;
        }

        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <i class="fas fa-heartbeat text-danger"></i> TeleMed
        </div>

        <a href="@Url.Action("Index", "Home")"><i class="bi bi-house-door"></i> Home</a>
        <a href="@Url.Action("Index", "Doctors")"><i class="bi bi-person-badge"></i> Doctors</a>

        @if (User.Identity.IsAuthenticated)
        {
            @if (isAdmin)
            {
                <a href="@Url.Action("AdminIndex", "Appointments")"><i class="bi bi-calendar-check"></i> All Appointments</a>
                <a href="@Url.Action("Payments", "Admin")"><i class="bi bi-currency-dollar"></i> Payments</a>
                <a href="@Url.Action("Report", "Admin")"><i class="bi bi-graph-up"></i> Reports</a>
                <a href="@Url.Action("Index", "Patients")"><i class="bi bi-people"></i> Patient List</a>
                <a href="@Url.Action("PendingDoctors", "Admin")"><i class="bi bi-hourglass-split"></i> Pending Requests</a>
                <a href="@Url.Action("PendingSchedules", "Admin")"><i class="bi bi-clock-history"></i> Doctor Schedule Requests</a>
            }
            else if (isDoctor)
            {
                <a href="@Url.Action("DoctorIndex", "Appointments")"><i class="bi bi-calendar-check"></i> My Appointments</a>
                <a href="@Url.Action("Create", "DoctorSchedules")"><i class="bi bi-clock"></i> Add Schedule</a>
                <a href="@Url.Action("MySchedules", "DoctorSchedules")"><i class="bi bi-list-check"></i> My Schedules</a>

                <!-- Prescriptions -->
                <a href="@Url.Action("Index", "Prescriptions")"><i class="bi bi-file-earmark-text"></i> View Prescriptions</a>
                <a href="@Url.Action("Create", "Prescriptions")"><i class="bi bi-plus-square"></i> Add Prescription</a>

                <!-- Payments for Doctor -->
                <a href="@Url.Action("Index", "Payments")"><i class="bi bi-cash-stack"></i> View Payments</a>
            }


            else if (isPatient)
            {
                <a href="@Url.Action("Index", "Appointments")"><i class="bi bi-calendar-check"></i> My Appointments</a>
                <a href="@Url.Action("Create", "Appointments")"><i class="bi bi-calendar-plus"></i> Book Appointment</a>

                <!-- Presentations for Patient -->
                <a href="@Url.Action("Index", "Prescriptions")"><i class="bi bi-file-earmark-text"></i> View Prescriptions</a>

                <!-- Payments for Patient -->
                <a href="@Url.Action("Index", "Payments")"><i class="bi bi-cash-stack"></i> My Payments</a>
            }

            <a href="@Url.Action("Profile", "Account")"><i class="bi bi-person-circle"></i> My Profile</a>
        }

        else
        {
            <a class="btn btn-outline-light w-100 mt-2" href="@Url.Action("Login", "Account")">Login</a>
            <a class="btn btn-light text-primary w-100 mt-2" href="@Url.Action("Register", "Account")">Sign Up</a>
        }

        <a href="@Url.Action("About", "Home")"><i class="bi bi-info-circle"></i> About</a>

        @if (User.Identity.IsAuthenticated)
        {
            <a href="#" class="mt-3 disabled"><i class="bi bi-person-check"></i> Hi, @userFullName</a>
            <form method="post" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="btn btn-outline-light w-100 mt-2 mb-2">Logout</button>
            </form>
        }
    </div>

    <!-- Main Content -->
    <main id="mainContent" class="content-shift">
        @RenderBody()
    </main>

    <!-- Floating Toggle Button -->
    <button class="toggle-btn" id="toggleSidebar"><i class="bi bi-list"></i></button>

    <!-- Footer -->
    <footer class="text-center py-4 mt-5">
        <div class="container">
            <p class="mb-1">&copy; @DateTime.Now.Year <strong>TeleMed</strong> — All Rights Reserved</p>
            <p class="small mb-0">
                <i class="bi bi-envelope-fill me-2"></i>telemed@gmail.com |
                <i class="bi bi-telephone-fill me-2"></i>+8801701554707
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    <script>
        let lastScrollTop = 0;
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('mainContent');
        const toggleSidebar = document.getElementById('toggleSidebar');

        window.addEventListener('scroll', function() {
            const st = window.pageYOffset || document.documentElement.scrollTop;

            if (st > lastScrollTop + 50 && st > 100) {
                // Scroll down: fade and slide out
                sidebar.classList.add('hide');
                mainContent.style.marginLeft = '0';
            }
            else if (st < lastScrollTop - 50) {
                // Scroll up: slide back in
                sidebar.classList.remove('hide');
                mainContent.style.marginLeft = '250px';
            }

            lastScrollTop = st <= 0 ? 0 : st;
        });

        toggleSidebar.addEventListener('click', function() {
            sidebar.classList.toggle('hide');
            mainContent.style.marginLeft = sidebar.classList.contains('hide') ? '0' : '250px';
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
