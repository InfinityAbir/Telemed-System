@model Telemed.ViewModels.PrescriptionViewModel

@{
    ViewData["Title"] = "Create Prescription";
}

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">
            <h3 class="mb-4 text-primary fw-bold">
                <i class="bi bi-plus-circle"></i> New Prescription
            </h3>

            <form asp-action="Create" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="AppointmentId" class="form-label fw-semibold">Appointment</label>
                        <select asp-for="AppointmentId" class="form-select" asp-items="ViewBag.AppointmentId" required>
                            <option value="">Select an appointment...</option>
                        </select>
                        <span asp-validation-for="AppointmentId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MedicineName" class="form-label fw-semibold">Medicine Name</label>
                        <input asp-for="MedicineName" class="form-control" placeholder="Enter medicine name" required />
                        <span asp-validation-for="MedicineName" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Dosage" class="form-label fw-semibold">Dosage</label>
                        <input asp-for="Dosage" class="form-control" placeholder="e.g., 1 tablet twice a day" required />
                        <span asp-validation-for="Dosage" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Duration" class="form-label fw-semibold">Duration</label>
                        <input asp-for="Duration" class="form-control" placeholder="e.g., 5 days" required />
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Notes" class="form-label fw-semibold">Additional Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Enter notes or instructions"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label class="form-label fw-semibold">Upload Prescription File (optional)</label>
                        <input type="file" class="form-control" name="file" accept=".pdf,.jpg,.jpeg,.png" />
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-check2-circle"></i> Save Prescription
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
