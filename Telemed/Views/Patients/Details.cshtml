@using Microsoft.AspNetCore.Identity
@model Telemed.Models.Patient
@inject UserManager<Telemed.Models.ApplicationUser> UserManager

@{
    ViewData["Title"] = "Patient Details";
    bool isAdmin = false;

    if (User.Identity.IsAuthenticated)
    {
        var currentUser = await UserManager.GetUserAsync(User);
        if (currentUser != null)
        {
            isAdmin = await UserManager.IsInRoleAsync(currentUser, "Admin");
        }
    }
}

<div class="container my-5">
    <div class="card shadow-sm p-4 mx-auto" style="max-width:700px; border-radius:15px;">
        <!-- Profile Picture & Name -->
        <div class="text-center mb-4">
            <img src="@(string.IsNullOrEmpty(Model.User.ProfileImageUrl) ? "/images/default-user.png" : Model.User.ProfileImageUrl)"
                 class="rounded-circle mb-3" style="width:120px;height:120px;object-fit:cover;" />
            <h3 class="text-primary">@Model.User.FullName</h3>
            <p class="text-muted mb-0">@Model.User.Email</p>
        </div>

        <!-- Patient Information -->
        <div class="row mt-3">
            <div class="col-md-6 mb-2">
                <strong>Contact:</strong> @Model.ContactNumber
            </div>
            <div class="col-md-6 mb-2">
                <strong>Date of Birth:</strong> @(Model.DOB.HasValue? Model.DOB.Value.ToString("dd MMM yyyy") : "N/A")
            </div>
            <div class="col-md-6 mb-2">
                <strong>Gender:</strong> @Model.Gender
            </div>
            <div class="col-md-6 mb-2">
                <strong>Address:</strong> @(string.IsNullOrEmpty(Model.User.Address) ? "N/A" : Model.User.Address)
            </div>
            <div class="col-md-6 mb-2">
                <strong>Role:</strong> @Model.User.UserRole
            </div>
            <div class="col-md-6 mb-2">
                <strong>Account Created:</strong> @Model.User.CreatedAt.ToString("dd MMM yyyy")
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-4 text-center d-flex justify-content-center gap-2 flex-wrap">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>

            @if (isAdmin)
            {
                <a asp-action="Edit" asp-route-id="@Model.PatientId" class="btn btn-outline-warning btn-sm">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.PatientId" class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-trash"></i> Delete
                </a>
            }
        </div>
    </div>
</div>

<style>
    .card {
        background: #ffffff;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.15);
        }

    .btn-sm {
        border-radius: 8px;
    }

    @@media (max-width: 576px) {
        .d-flex.justify-content-center

    {
        flex-direction: column;
        align-items: stretch;
    }

    }
</style>
