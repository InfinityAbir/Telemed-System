@model Telemed.Models.Patient

@{
    ViewData["Title"] = "Delete Patient";
}

<div class="container my-5">
    <div class="card shadow-sm p-4 mx-auto" style="max-width:700px; border-radius:15px;">
        <div class="text-center mb-4">
            <h3 class="text-danger"><i class="bi bi-exclamation-triangle-fill"></i> Confirm Delete</h3>
            <p class="text-muted">Are you sure you want to delete this patient? This action cannot be undone.</p>
        </div>

        <div class="mb-4">
            <div class="d-flex align-items-center mb-3">
                <img src="@(string.IsNullOrEmpty(Model.User.ProfileImageUrl) ? "/images/default-user.png" : Model.User.ProfileImageUrl)"
                     class="rounded-circle me-3" style="width:80px; height:80px; object-fit:cover;" alt="Profile Picture" />
                <h4 class="mb-0">@Model.User.FullName</h4>
            </div>

            <dl class="row">
                <dt class="col-sm-4">Date of Birth</dt>
                <dd class="col-sm-8">@Model.DOB?.ToString("dd MMM yyyy")</dd>

                <dt class="col-sm-4">Gender</dt>
                <dd class="col-sm-8">@Model.Gender</dd>

                <dt class="col-sm-4">Contact Number</dt>
                <dd class="col-sm-8">@Model.ContactNumber</dd>
            </dl>
        </div>

        <form asp-action="Delete" class="text-center">
            <input type="hidden" asp-for="PatientId" />
            <button type="submit" class="btn btn-danger btn-lg me-2">
                <i class="bi bi-trash-fill"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>

<style>
    .card {
        background: #ffffff;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.15);
        }

    .btn-lg {
        border-radius: 8px;
    }
</style>
