@model IEnumerable<Telemed.Models.Patient>
@inject UserManager<Telemed.Models.ApplicationUser> UserManager
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Patients List";
    bool isAdmin = false;

    if (User.Identity.IsAuthenticated)
    {
        var currentUser = await UserManager.GetUserAsync(User);
        if (currentUser != null)
        {
            isAdmin = await UserManager.IsInRoleAsync(currentUser, "Admin");
        }
    }

    string searchTerm = ViewData["SearchTerm"] as string ?? "";
}

<div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
    <h2 class="text-primary mb-2">Patients List</h2>

    <div class="d-flex align-items-center mb-2">
        <form method="get" class="d-flex me-2">
            <input type="text" name="searchTerm" class="form-control form-control-sm" placeholder="Search by name..." value="@searchTerm" />
            <button type="submit" class="btn btn-primary btn-sm ms-2"><i class="bi bi-search"></i> Search</button>
        </form>

        @if (isAdmin)
        {
            <a asp-action="Create" class="btn btn-success btn-sm">
                <i class="bi bi-plus-circle"></i> Create New
            </a>
        }
    </div>
</div>

@if (!Model.Any())
{
    <p class="text-center text-muted">No patients found.</p>
}
else
{
    <div class="row g-4">
        @foreach (var patient in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm h-100 border-0">
                    <div class="card-body text-center">
                        <img src="@(string.IsNullOrEmpty(patient.User.ProfileImageUrl) ? "/images/default-user.png" : patient.User.ProfileImageUrl)"
                             class="rounded-circle mb-3" style="width:100px;height:100px;object-fit:cover;" />

                        <h5 class="card-title text-primary">@patient.User.FullName</h5>
                        <p class="card-text mb-1"><strong>Date of Birth:</strong> @(patient.DOB.HasValue? patient.DOB.Value.ToString("dd MMM yyyy") : "N/A")</p>
                        <p class="card-text mb-1"><strong>Gender:</strong> @patient.Gender</p>
                        <p class="card-text mb-1"><strong>Contact:</strong> @patient.ContactNumber</p>

                        <div class="mt-3 d-flex justify-content-center flex-wrap gap-2">
                            <a asp-action="Details" asp-route-id="@patient.PatientId" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye"></i> Details
                            </a>

                            @if (isAdmin)
                            {
                                <a asp-action="Edit" asp-route-id="@patient.PatientId" class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@patient.PatientId" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    .card {
        border-radius: 15px;
        transition: transform 0.3s, box-shadow 0.3s;
        background: #ffffff;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 25px rgba(0,0,0,0.15);
        }

    .btn-sm {
        border-radius: 8px;
    }

    /* Search input animation */
    input[name="searchTerm"]:focus {
        outline: none;
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0,123,255,0.5);
    }

    @@media (max-width: 576px) {
        .d-flex.justify-content-between

    {
        flex-direction: column;
        align-items: flex-start;
    }

    }
</style>
