@model IEnumerable<PatientPrescriptionUpload>
@{
    ViewData["Title"] = "My Prescriptions";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background-color: #f9fafc;
        font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-header {
        background: linear-gradient(135deg, #007bff, #00c6ff);
        color: white;
        border-radius: 20px;
        padding: 40px 25px;
        text-align: center;
        margin-bottom: 40px;
        box-shadow: 0 4px 15px rgba(0, 123, 255, 0.25);
    }

        .page-header h2 {
            font-weight: 700;
            margin-bottom: 10px;
        }

        .page-header p {
            font-size: 15px;
            opacity: 0.9;
        }

    .upload-btn {
        border-radius: 12px;
        font-weight: 600;
        transition: 0.2s ease-in-out;
    }

        .upload-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 123, 255, 0.2);
        }

    .prescription-card {
        background: #fff;
        border-radius: 16px;
        border: 1px solid #e6ebf2;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.03);
        padding: 25px;
        transition: all 0.2s ease-in-out;
    }

        .prescription-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.06);
        }

    .prescription-icon {
        background: #e7f1ff;
        color: #007bff;
        font-size: 28px;
        padding: 15px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .file-info {
        font-size: 14px;
        color: #555;
    }

    .actions button,
    .actions a {
        border-radius: 8px !important;
        font-size: 14px;
    }

    .alert-success {
        border-radius: 12px;
        box-shadow: 0 4px 12px rgba(40, 167, 69, 0.15);
    }
</style>

<div class="container py-5">

    <div class="page-header">
        <h2><i class="bi bi-folder2-open"></i> My Uploaded Prescriptions</h2>
        <p>Access, download, or manage your medical prescriptions</p>
        <a href="@Url.Action("Upload")" class="btn btn-light btn-lg upload-btn mt-3">
            <i class="bi bi-cloud-arrow-up"></i> Upload New Prescription
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center mb-4">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center text-muted mt-5">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <p class="mt-3 fs-5">No prescriptions uploaded yet.</p>
            <p>Start by uploading your previous medical prescriptions.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="prescription-card">
                        <div class="d-flex align-items-center mb-3">
                            <div class="prescription-icon me-3">
                                <i class="bi bi-file-earmark-medical"></i>
                            </div>
                            <div>
                                <h6 class="mb-1 fw-semibold">@item.OriginalFileName</h6>
                                <small class="text-muted">@item.UploadDate.ToLocalTime().ToString("dd MMM yyyy, hh:mm tt")</small>
                            </div>
                        </div>

                        <p class="file-info mb-2"><i class="bi bi-info-circle"></i> @item.Description</p>
                        <p class="file-info">
                            <i class="bi bi-database"></i> Size:
                            @(item.FileSize >= 1024 ? $"{(item.FileSize / 1024.0):0.0} KB" : $"{item.FileSize} B")
                        </p>

                        <div class="actions mt-3 d-flex justify-content-between">
                            <a href="@Url.Action("Download", new { id = item.Id })" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-download"></i> Download
                            </a>
                            <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Delete this file?');">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
