@{
    ViewData["Title"] = "Upload Prescription";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background-color: #f9fafc;
        font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .upload-header {
        background: linear-gradient(135deg, #007bff, #00c6ff);
        color: white;
        border-radius: 20px;
        padding: 40px 25px;
        text-align: center;
        margin-bottom: 40px;
        box-shadow: 0 4px 15px rgba(0, 123, 255, 0.25);
    }

        .upload-header h2 {
            font-weight: 700;
            margin-bottom: 10px;
        }

        .upload-header p {
            font-size: 15px;
            opacity: 0.9;
        }

    .upload-card {
        background: #fff;
        border-radius: 18px;
        padding: 35px 30px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.05);
        max-width: 600px;
        margin: 0 auto;
        border: 1px solid #e6ebf2;
    }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px 12px;
    }

    .btn-submit {
        background: linear-gradient(135deg, #007bff, #00c6ff);
        border: none;
        border-radius: 12px;
        padding: 10px 20px;
        font-weight: 600;
        color: white;
        transition: 0.2s ease-in-out;
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 123, 255, 0.25);
        }

    .btn-secondary {
        border-radius: 12px;
    }

    .alert-danger {
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(220, 53, 69, 0.15);
    }

    .icon-box {
        font-size: 45px;
        color: #007bff;
        background: #e7f1ff;
        border-radius: 15px;
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
    }
</style>

<div class="container py-5">
    <div class="upload-header">
        <h2><i class="bi bi-cloud-upload"></i> Upload Prescription</h2>
        <p>Submit your past medical prescriptions securely</p>
    </div>

    <div class="upload-card">
        <div class="icon-box mb-3">
            <i class="bi bi-file-earmark-medical"></i>
        </div>

        <form asp-action="Upload" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="file" class="form-label"><i class="bi bi-paperclip"></i> Choose File</label>
                <input type="file" class="form-control" name="file" required />
                <div class="form-text text-muted">Allowed: PDF, JPG, PNG (Max 10 MB)</div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label"><i class="bi bi-textarea-t"></i> Description (must)</label>
                <input class="form-control" name="description" maxlength="500" placeholder="Add a short note about this prescription..." />
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-secondary" href="@Url.Action("Index")"><i class="bi bi-arrow-left"></i> Back</a>
                <button type="submit" class="btn btn-submit"><i class="bi bi-cloud-arrow-up"></i> Upload</button>
            </div>
        </form>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-4">
                <strong><i class="bi bi-exclamation-triangle"></i> Please fix the following errors:</strong>
                <ul class="mt-2 mb-0">
                    @foreach (var state in ViewData.ModelState.Values)
                    {
                        foreach (var err in state.Errors)
                        {
                            <li>@err.ErrorMessage</li>
                        }
                    }
                </ul>
            </div>
        }
    </div>
</div>
