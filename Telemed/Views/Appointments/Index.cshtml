@model IEnumerable<Telemed.Models.Appointment>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "My Appointments";
}

<div class="container py-5">
    <h2 class="text-center mb-4">Appointments</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            No appointments found.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-lg border-0 rounded-4 appointment-card">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <img src="@(item.Doctor?.User?.ProfileImageUrl ?? "/images/default-user.png")"
                                     alt="Doctor Photo"
                                     class="rounded-circle me-3"
                                     style="width:55px;height:55px;object-fit:cover;">
                                <div>
                                    <h5 class="card-title mb-1">@item.Doctor?.User?.FullName</h5>
                                    <small class="text-muted">@item.Doctor?.Specialization</small>
                                </div>
                            </div>

                            <p class="mb-1"><strong>Patient:</strong> @item.Patient?.User?.FullName</p>
                            <p class="mb-1"><strong>Date:</strong> @item.ScheduledAt.ToString("MMMM dd, yyyy hh:mm tt")</p>

                            <span class="badge bg-@(item.Status switch
                                  {
                                      Telemed.Models.AppointmentStatus.PendingPayment => "warning",
                                      Telemed.Models.AppointmentStatus.Approved => "primary",
                                      Telemed.Models.AppointmentStatus.Completed => "success",
                                      Telemed.Models.AppointmentStatus.Rejected => "danger",
                                      _ => "secondary"
                                  })">@item.Status</span>

                    @if (!string.IsNullOrEmpty(item.PatientNote))
                            {
                                <p class="mt-3 text-muted small"><strong>Note:</strong> @item.PatientNote</p>
                            }

                            <div class="d-flex justify-content-between mt-3">
                                <a asp-action="Details" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-outline-primary">View</a>

                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-outline-danger">Delete</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .appointment-card {
        transition: all 0.3s ease-in-out;
        background: linear-gradient(135deg, #ffffff, #f9fbfd);
    }

        .appointment-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }
</style>
