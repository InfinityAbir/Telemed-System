@model IEnumerable<Telemed.Models.Appointment>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "My Appointments";
}

<div class="container py-5">
    <h2 class="text-center mb-5 fw-bold">My Appointments</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm rounded-4">
            No appointments found.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card appointment-card border-0 shadow-sm rounded-4">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <img src="@(item.Doctor?.User?.ProfileImageUrl ?? "/images/default-user.png")"
                                     alt="Doctor Photo"
                                     class="rounded-circle me-3"
                                     style="width:60px; height:60px; object-fit:cover; border:2px solid #0d6efd;">
                                <div>
                                    <h5 class="mb-1 fw-bold">@item.Doctor?.User?.FullName</h5>
                                    <small class="text-muted">@item.Doctor?.Specialization</small>
                                </div>
                            </div>

                            <div class="mb-2">
                                <p class="mb-1"><strong>Patient:</strong> @item.Patient?.User?.FullName</p>
                                <p class="mb-1"><strong>Date:</strong> @item.ScheduledAt.ToString("MMMM dd, yyyy hh:mm tt")</p>
                                <span class="badge bg-@(item.Status switch
                                      {
                                          Telemed.Models.AppointmentStatus.PendingPayment => "warning",
                                          Telemed.Models.AppointmentStatus.Approved => "primary",
                                          Telemed.Models.AppointmentStatus.Completed => "success",
                                          Telemed.Models.AppointmentStatus.Rejected => "danger",
                                          _ => "secondary"
                                      }) fs-6">@item.Status</span>
                    </div>

                    @if (!string.IsNullOrEmpty(item.PatientNote))
                            {
                                <p class="mt-3 text-muted small"><strong>Note:</strong> @item.PatientNote</p>
                            }

                            <div class="d-flex justify-content-between mt-4">
                                <a asp-action="Details" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-primary px-3">View</a>

                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-outline-danger">Delete</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .appointment-card {
        transition: all 0.3s ease-in-out;
        background: #ffffff;
    }

        .appointment-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.12);
        }

        .appointment-card .badge {
            padding: 0.5em 0.75em;
            border-radius: 0.5rem;
        }

    .card-body p {
        margin-bottom: 0.35rem;
    }

    .btn-group .btn {
        border-radius: 0.375rem;
    }
</style>
