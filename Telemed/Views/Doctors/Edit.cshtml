@model Telemed.Models.Doctor
@using Microsoft.AspNetCore.Identity
@inject UserManager<Telemed.Models.ApplicationUser> UserManager

@{
    ViewData["Title"] = "Edit Doctor";
}

@if (!User.IsInRole("Admin"))
{
    <div class="text-center mt-5">
        <h3 class="text-danger">Access Denied</h3>
        <p>Only administrators can edit doctor information.</p>
    </div>
}
else
{
    <div class="container mt-5 mb-5" style="max-width:600px;">
        <h2 class="text-center mb-4">Edit Doctor</h2>

        <form asp-action="Edit" method="post" class="shadow-lg p-4 rounded-4 bg-white">
            <input type="hidden" asp-for="DoctorId" />

            <!-- Display Doctor Name -->
            <div class="mb-3">
                <label class="form-label">Doctor Name</label>
                <input type="text" class="form-control form-control-lg rounded-pill"
                       value="@Model.User?.FullName" disabled />
            </div>

            <!-- Specialization -->
            <div class="mb-3">
                <label asp-for="Specialization" class="form-label">Specialization</label>
                <input asp-for="Specialization"
                       class="form-control form-control-lg rounded-pill"
                       placeholder="e.g. Cardiology" />
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>

            <!-- Qualification -->
            <div class="mb-3">
                <label asp-for="Qualification" class="form-label">Qualification</label>
                <input asp-for="Qualification"
                       class="form-control form-control-lg rounded-pill"
                       placeholder="e.g. MBBS, MD" />
                <span asp-validation-for="Qualification" class="text-danger"></span>
            </div>

            <!-- 💰 Consultation Fee -->
            <div class="mb-3">
                <label asp-for="ConsultationFee" class="form-label">Consultation Fee (BDT)</label>
                <input asp-for="ConsultationFee" type="number" step="0.01" min="0"
                       class="form-control form-control-lg rounded-pill"
                       placeholder="e.g. 500" />
                <span asp-validation-for="ConsultationFee" class="text-danger"></span>
            </div>

            <!-- Is Approved -->
            <div class="form-check form-switch mb-4">
                <input asp-for="IsApproved" class="form-check-input" type="checkbox" id="isApproved">
                <label asp-for="IsApproved" class="form-check-label">Is Approved</label>
            </div>

            <!-- Submit -->
            <button type="submit"
                    class="btn btn-success btn-lg w-100 rounded-pill shadow-sm"
                    style="transition: transform 0.3s;">
                Save Changes
            </button>
        </form>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelector("form").addEventListener("submit", function (e) {
            if (!confirm("Are you sure you want to save changes to this doctor?")) {
                e.preventDefault();
            }
        });
    </script>
}
